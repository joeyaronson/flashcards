<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ucsc.flashcards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".splashScreen"
            android:label="Flashcards"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newSet"
            android:label="Make a New Set"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".newCard"
            android:label="Make a New Card"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".sets"
            android:label="Sets of Flashcards"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".newClass"
            android:label="Make a New Class"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".cards"
            android:label="Flashcards"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            android:label="Classes"
            android:screenOrientation="portrait"/>
        <activity android:name=".CardView"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".playActivity"
            android:label="Quiz"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".helpActivity"
            android:label="Help"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>